<% sortedList = list.sort { |a, b| b.average_rating <=> a.average_rating } %>

<table class="table table-hover">
  <tr>
    <th></th>
    <th>Average</th>
  </tr>
  <% sortedList[0..2].each do |b| %>
      <tr>
        <td><%= link_to b.name, b %></td>
        <td><%= b.average_rating %></td>
      </tr>
  <% end %>
</table>